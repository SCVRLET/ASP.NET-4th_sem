        </div>
        <div class="navbar-option">
            <h2><a class="navbar-option" >Home</a></h2>
        </div>
        <div class="navbar-option">
            <h2><a class="navbar-option">My profile</a></h2>
        </div>
        <div class="navbar-option">
            <h2><a class="navbar-option">Settings</a></h2>
        </div>
        <div class="navbar-option">
            <h2><a class="navbar-option">Subscription</a></h2>
        </div>
        <div class="navbar-option logout">
            <h2><a class="navbar-option logout" asp-action="Logout" asp-controller="Account">Logout</a></h2>
        </div>
    </div>
    <div id="main-content" class="column">
        @RenderBody()
    </div>
    <div id="add-content" class="column">
        Coming soon...
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>